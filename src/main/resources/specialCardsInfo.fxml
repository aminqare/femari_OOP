<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="500.0" prefWidth="400.0" style="-fx-background-color: #222266;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stronghold.controller.graphical.specialCardsInfoController">
    <children>
        <VBox alignment="TOP_CENTER" layoutY="86.0" prefHeight="414.0" prefWidth="400.0" spacing="30.0">
            <children>
                <Label fx:id="NameField" alignment="CENTER" prefHeight="40.0" prefWidth="400.0" text="CardName" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="LevelField" alignment="CENTER" prefHeight="42.0" prefWidth="400.0" text="Level" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="PriceField" alignment="CENTER" prefHeight="41.0" prefWidth="400.0" text="Price" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="DurationField" alignment="CENTER" contentDisplay="CENTER" prefHeight="43.0" prefWidth="400.0" text="Duration" textFill="#fffefe">
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font>
                </Label>
                <Button fx:id="BuyButtom" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="26.0" prefWidth="94.0" style="-fx-background-radius: 10; -fx-background-color: #c4a633;" text="Buy" onMouseClicked="#Buy"/>
                <Button fx:id="UpgradeButtom" mnemonicParsing="false" prefHeight="26.0" prefWidth="99.0" style="-fx-background-radius: 10; -fx-background-color: #c4a633;" text="Upgrade" onMouseClicked="#upgrade" />
            </children>
        </VBox>
    </children>
</AnchorPane>
