<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stronghold.controller.graphical.GameMenuController">
    <!-- Top ScrollPanes -->
    <ScrollPane fx:id="topLeftDeck" layoutX="10.0" layoutY="10.0" prefHeight="150.0" prefWidth="580.0" >
    <content>
        <HBox fx:id="cardsBarOne" spacing="0" alignment="CENTER" styleClass="hbox">
    <!-- Cards will be dynamically added here -->
    </HBox>
    </content>
    </ScrollPane>
    <ScrollPane fx:id="topRightDeck" layoutX="610.0" layoutY="10.0" prefHeight="150.0" prefWidth="580.0" >
        <content>
            <HBox fx:id="specialCardsBarOne" spacing="0" alignment="CENTER" styleClass="hbox">
                <!-- Cards will be dynamically added here -->
            </HBox>
        </content>
    </ScrollPane>

    <!-- Bottom ScrollPanes -->
    <ScrollPane fx:id="bottomLeftDeck" layoutX="10.0" layoutY="640.0" prefHeight="150.0" prefWidth="580.0" >
        <content>
            <HBox fx:id="cardsBarTwo" spacing="0" alignment="CENTER" styleClass="hbox">
                <!-- Cards will be dynamically added here -->
            </HBox>
        </content>
    </ScrollPane>
    <ScrollPane fx:id="bottomRightDeck" layoutX="610.0" layoutY="640.0" prefHeight="150.0" prefWidth="580.0" >
        <content>
            <HBox fx:id="specialCardsBarTwo" spacing="0" alignment="CENTER" styleClass="hbox">
                <!-- Cards will be dynamically added here -->
            </HBox>
        </content>
    </ScrollPane>

    <!-- Game Ground -->
    <GridPane fx:id="upperGround" layoutX="10.0" layoutY="170.0" prefHeight="230.0" prefWidth="1180.0" hgap="5.0" vgap="5.0" gridLinesVisible="true"/>
    <GridPane fx:id="lowerGround" layoutX="10.0" layoutY="410.0" prefHeight="230.0" prefWidth="1180.0" hgap="5.0" vgap="5.0" gridLinesVisible="true"/>
    <AnchorPane layoutX="1000.0" layoutY="280.0" prefHeight="80.0" prefWidth="150.0" style="-fx-border-color: black; -fx-border-width: 1;">
        <ImageView fx:id="player2Image" layoutX="10.0" layoutY="10.0" fitHeight="50.0" fitWidth="50.0" />
        <Label fx:id="player2Name" layoutX="70.0" layoutY="10.0" text="Player 2" />
        <ProgressBar fx:id="player2HP" layoutX="70.0" layoutY="40.0" prefWidth="70.0" progress="1.0" />
    </AnchorPane>

    <AnchorPane layoutX="1000.0" layoutY="500.0" prefHeight="80.0" prefWidth="150.0" style="-fx-border-color: black; -fx-border-width: 1;">
        <ImageView fx:id="player1Image" layoutX="10.0" layoutY="10.0" fitHeight="50.0" fitWidth="50.0" />
        <Label fx:id="player1Name" layoutX="70.0" layoutY="10.0" text="Player 1" />
        <ProgressBar fx:id="player1HP" layoutX="70.0" layoutY="40.0" prefWidth="70.0" progress="1.0" />
    </AnchorPane>
</AnchorPane>
