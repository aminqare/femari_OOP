<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.HBox?>
<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stronghold.controller.graphical.GameMenuController">
    <!-- Top ScrollPanes -->
    <ScrollPane fx:id="topLeftDeck" layoutX="10.0" layoutY="10.0" prefHeight="150.0" prefWidth="580.0" >
    <content>
        <HBox fx:id="cardsBarOne" spacing="0" alignment="CENTER" styleClass="hbox">
    <!-- Cards will be dynamically added here -->
    </HBox>
    </content>
    </ScrollPane>
    <ScrollPane fx:id="topRightDeck" layoutX="610.0" layoutY="10.0" prefHeight="150.0" prefWidth="580.0" >
        <content>
            <HBox fx:id="specialCardsBarOne" spacing="0" alignment="CENTER" styleClass="hbox">
                <!-- Cards will be dynamically added here -->
            </HBox>
        </content>
    </ScrollPane>

    <!-- Bottom ScrollPanes -->
    <ScrollPane fx:id="bottomLeftDeck" layoutX="10.0" layoutY="640.0" prefHeight="150.0" prefWidth="580.0" >
        <content>
            <HBox fx:id="cardsBarTwo" spacing="0" alignment="CENTER" styleClass="hbox">
                <!-- Cards will be dynamically added here -->
            </HBox>
        </content>
    </ScrollPane>
    <ScrollPane fx:id="bottomRightDeck" layoutX="610.0" layoutY="640.0" prefHeight="150.0" prefWidth="580.0" >
        <content>
            <HBox fx:id="specialCardsBarTwo" spacing="0" alignment="CENTER" styleClass="hbox">
                <!-- Cards will be dynamically added here -->
            </HBox>
        </content>
    </ScrollPane>

    <!-- Game Ground -->
    <GridPane fx:id="upperGround" layoutX="10.0" layoutY="170.0" prefHeight="230.0" prefWidth="1180.0" hgap="5.0" vgap="5.0" gridLinesVisible="true"/>
    <GridPane fx:id="lowerGround" layoutX="10.0" layoutY="410.0" prefHeight="230.0" prefWidth="1180.0" hgap="5.0" vgap="5.0" gridLinesVisible="true"/>
</AnchorPane>
