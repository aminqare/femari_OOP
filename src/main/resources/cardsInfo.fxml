<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="550.0" style="-fx-background-color: #222266;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stronghold.controller.graphical.cardsInfoController">
    <children>
        <VBox alignment="TOP_CENTER" layoutY="59.0" prefHeight="640.0" prefWidth="618.0" spacing="20.0">
            <children>
                <Label fx:id="NameField" alignment="CENTER" prefHeight="47.0" prefWidth="618.0" text="CardName" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="LevelField" alignment="CENTER" prefHeight="47.0" prefWidth="646.0" text="Level" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="DurationField" alignment="CENTER" contentDisplay="CENTER" prefHeight="43.0" prefWidth="617.0" text="Duration" textFill="#fffefe">
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font>
                </Label>
            <Label fx:id="Damage" alignment="CENTER" prefHeight="38.0" prefWidth="618.0" text="Damage" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </Label>
            <Label fx:id="Attack" alignment="CENTER" prefHeight="43.0" prefWidth="618.0" text="Attack" textFill="#fffdfd">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </Label>
            <Label fx:id="Defence" alignment="CENTER" prefHeight="42.0" prefWidth="618.0" text="Defence" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </Label>
                <Label fx:id="PriceField" alignment="CENTER" prefHeight="42.0" prefWidth="626.0" text="Price" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font>
                </Label>
            <Label fx:id="UpgradeCost" alignment="CENTER" prefHeight="41.0" prefWidth="618.0" text="UpgradeCost" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </Label>
                <Button fx:id="BuyButtom" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#Buy" prefHeight="26.0" prefWidth="94.0" style="-fx-background-radius: 10; -fx-background-color: #c4a633;" text="Buy" />
                <Button fx:id="UpgradeButtom" mnemonicParsing="false" onMouseClicked="#upgrade" prefHeight="26.0" prefWidth="99.0" style="-fx-background-radius: 10; -fx-background-color: #c4a633;" text="Upgrade" />
            </children>
        </VBox>
    </children>
</AnchorPane>
