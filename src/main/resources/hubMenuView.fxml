<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="314.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stronghold.controller.graphical.HubMenuController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="-2.0" prefHeight="331.0" prefWidth="600.0" spacing="10.0" style="-fx-background-color: #222266;">
            <children>
                <Label text="city wars : Tehran reign" textFill="#c4a633">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </Label>
                <HBox alignment="CENTER" prefHeight="25.0" prefWidth="600.0">
                    <children>
                        <Label text="Welcome, " textFill="#c4a633" />
                        <Label fx:id="usernameLabel" text="###USERNAME####" textFill="#c4a633" />
                    </children>
                </HBox>
                <Button fx:id="startNewGameButton" mnemonicParsing="false" onAction="#goToLobby" style="-fx-background-color: #c4a633; -fx-background-radius: 25;" text="Enter Game Lobby" />
                <Button fx:id="shopMenu" mnemonicParsing="false" onAction="#enterShop" style="-fx-background-color: #c4a633; -fx-background-radius: 25;" text="Enter Shop Menu" />
                <Button fx:id="profileMenuButton" mnemonicParsing="false" onAction="#openProfileEdit" style="-fx-background-color: #c4a633; -fx-background-radius: 25;" text="Edit Profile Menu" />
<!--                <Button mnemonicParsing="false" onAction="#searchPlayers" style="-fx-background-color: #c4a633; -fx-background-radius: 25;" text="Search Players" />-->
                <Button fx:id="logOutButton" mnemonicParsing="false" onMouseClicked="#logOut" style="-fx-background-color: #c4a633; -fx-background-radius: 25;" text="Log Out" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>